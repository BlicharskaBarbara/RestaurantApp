@model IEnumerable<RestaurantApp.ViewModels.OrderMenuItemVM>
@{
    ViewBag.Title = "Order and menu items details";
}

<h2>List of all orders and menu items connections details</h2>

<table class="table">

    <tr>
        <th>
            @Html.DisplayName("Order ID")
        </th>
        <th>
            @Html.DisplayName("Menu item name")
        </th>
        <th>
            @Html.DisplayName("Quantity")
        </th>
    
        <th></th>
    </tr>
   
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
          

        </tr>
    }

</table>